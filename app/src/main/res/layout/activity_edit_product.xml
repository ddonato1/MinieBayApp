<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProduct">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ListView
                android:id="@+id/listOfMyProducts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/textSelectedProd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="150dp"
                android:layout_marginRight="100dp"
                android:hint="Product Selected"
                android:textSize="14sp"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">

                    <Button
                        android:id="@+id/editNameBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="24dp"
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="12dp"
                        android:text="Edit Name"
                        android:textAllCaps="false"
                        android:background="#FB94DAD3"/>

                    <Button
                        android:id="@+id/editDescBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="24dp"
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="22dp"
                        android:text="Edit Description"
                        android:textAllCaps="false"
                        android:background="#FB94DAD3"/>
                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">

                    <Button
                        android:id="@+id/editPriceBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="24dp"
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="12dp"
                        android:text="Edit Price"
                        android:textAllCaps="false"
                        android:background="#FB94DAD3"/>

                    <Button
                        android:id="@+id/editDeptBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="24dp"
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="22dp"
                        android:text="Edit Department"
                        android:textAllCaps="false"
                        android:background="#FB94DAD3"/>
                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">

                    <Button
                        android:id="@+id/editCateBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="24dp"
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="12dp"
                        android:text="Edit Category"
                        android:textAllCaps="false"
                        android:background="#FB94DAD3"/>

                    <Button
                        android:id="@+id/editPhotoBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="24dp"
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="22dp"
                        android:text="Edit Photo"
                        android:textAllCaps="false"
                        android:background="#FB94DAD3"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>