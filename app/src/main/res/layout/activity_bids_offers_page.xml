<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BidsOffersPage">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.002">

        <TextView
            android:id="@+id/itemOwner"
            android:layout_width="90dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="151dp"
            android:layout_marginLeft="151dp"
            android:layout_marginTop="46dp"
            android:layout_marginEnd="151dp"
            android:layout_marginRight="151dp"
            android:text="Product Owner"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/itemID"
            android:layout_width="90dp"
            android:layout_height="32dp"
            android:layout_below="@+id/itemOwner"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="151dp"
            android:layout_marginLeft="151dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="151dp"
            android:layout_marginRight="151dp"
            android:text="Product ID"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/itemPrice"
            android:layout_width="90dp"
            android:layout_height="32dp"
            android:layout_below="@+id/itemID"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="151dp"
            android:layout_marginLeft="151dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="151dp"
            android:layout_marginRight="151dp"
            android:text="Price"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/bidPrice"
            android:layout_width="138dp"
            android:layout_height="43dp"
            android:layout_below="@+id/itemPrice"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="132dp"
            android:layout_marginLeft="132dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="132dp"
            android:layout_marginRight="132dp"
            android:layout_marginBottom="-193dp"
            android:hint="Enter your bid"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/userNameText"
            android:layout_width="174dp"
            android:layout_height="56dp"
            android:layout_below="@+id/bidPrice"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="105dp"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="231dp"
            android:layout_marginEnd="105dp"
            android:layout_marginRight="105dp"
            android:layout_marginBottom="-193dp"
            android:hint="Enter your username" />

        <Button
            android:id="@+id/addBidbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userNameText"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="164dp"
            android:layout_marginLeft="164dp"
            android:layout_marginTop="241dp"
            android:layout_marginEnd="156dp"
            android:layout_marginRight="164dp"
            android:layout_marginBottom="164dp"
            android:background="#FB94DAD3"
            android:text="Add"
            android:textAllCaps="false"
            android:textSize="18sp" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>