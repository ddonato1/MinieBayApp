<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyebayInfo">

    <ScrollView
        android:id="@+id/scrollview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="36dp"
                    android:layout_marginRight="75dp"
                    android:text="Hello,"
                    android:textColor="#009688"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/usernameView"
                    android:layout_width="147dp"
                    android:layout_height="29dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="36dp"
                    android:layout_marginEnd="174dp"
                    android:layout_marginRight="174dp"
                    android:layout_toEndOf="@+id/textView"
                    android:layout_toRightOf="@+id/textView"
                    android:hint="username"
                    android:textColor="#009688"
                    android:textSize="24sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/fisrtNameView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="55dp"
                    android:layout_marginRight="2dp"
                    android:hint="First Name"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/lastNameView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/usernameView"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="57dp"
                    android:layout_marginRight="17dp"
                    android:layout_toRightOf="@+id/fisrtNameView"
                    android:hint="Last Name"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/addressView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fisrtNameView"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="36dp"
                    android:layout_marginRight="17dp"
                    android:hint="Address"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/emailView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/addressView"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="36dp"
                    android:layout_marginRight="17dp"
                    android:hint="E-mail"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/yourOrdersBtn"
                    android:layout_width="500dp"
                    android:layout_height="55dp"
                    android:layout_below="@id/emailView"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="36dp"
                    android:layout_marginRight="100dp"
                    android:background="#FFFFFF"
                    android:text="Your Orders"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/bidsBtn"
                    android:layout_width="500dp"
                    android:layout_height="55dp"
                    android:layout_below="@id/yourOrdersBtn"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="100dp"
                    android:background="#FFFFFF"
                    android:text="Bids and Offers"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/purchasesBtn"
                    android:layout_width="500dp"
                    android:layout_height="55dp"
                    android:layout_below="@id/bidsBtn"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="100dp"
                    android:background="#FFFFFF"
                    android:text="Purchases"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/paymentBtn"
                    android:layout_width="500dp"
                    android:layout_height="55dp"
                    android:layout_below="@id/purchasesBtn"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="100dp"
                    android:background="#FFFFFF"
                    android:text="Payment Options"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/helpBtn"
                    android:layout_width="500dp"
                    android:layout_height="55dp"
                    android:layout_below="@id/paymentBtn"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="100dp"
                    android:background="#FFFFFF"
                    android:drawableTop="@drawable/help"
                    android:text="Help"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/settingsBtn"
                    android:layout_width="500dp"
                    android:layout_height="55dp"
                    android:layout_below="@id/helpBtn"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="100dp"
                    android:layout_marginBottom="54dp"
                    android:background="#FFFFFF"
                    android:drawableTop="@drawable/settings"
                    android:text="Settings"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/homeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="#FFFFFF"
        android:text="Home"
        android:textAllCaps="false"
        android:drawableTop="@drawable/home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/userinfButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:text="My eBay"
        android:textAllCaps="false"
        android:drawableTop="@drawable/accountuser"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/homeButton"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/notifButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:background="#FFFFFF"
        android:text="Notifications"
        android:textAllCaps="false"
        android:drawableTop="@drawable/notification"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/userinfButton"
        app:layout_constraintTop_toBottomOf="@+id/scrollview1"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/saleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:text="Selling"
        android:textAllCaps="false"
        android:drawableTop="@drawable/addsellings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/notifButton"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/shopitemButton"
        android:layout_width="31dp"
        android:layout_height="29dp"
        android:layout_marginTop="16dp"
        android:background="#FFFFFF"
        android:foreground="@drawable/shoppingcart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.984"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>