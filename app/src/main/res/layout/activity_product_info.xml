<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProductInfo">

    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="414dp"
        android:layout_height="328dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-3dp"
        tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/itemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/imageView4"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="-36dp"
                    android:text="Product Name" />

                <TextView
                    android:id="@+id/itemOwner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/itemName"
                    android:layout_marginLeft="12dp"
                    android:layout_marginBottom="-34dp"
                    android:text="Product Owner" />

                <TextView
                    android:id="@+id/itemDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/itemOwner"
                    android:layout_marginLeft="12dp"
                    android:layout_marginBottom="-34dp"
                    android:text="Product Description" />

                <TextView
                    android:id="@+id/itemPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/itemDescription"
                    android:layout_marginLeft="12dp"
                    android:layout_marginBottom="-34dp"
                    android:text="Price" />

                <TextView
                    android:id="@+id/itemDepartment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/itemPrice"
                    android:layout_marginLeft="12dp"
                    android:layout_marginBottom="-34dp"
                    android:text="Department" />

                <TextView
                    android:id="@+id/itemCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/itemDepartment"
                    android:layout_marginLeft="12dp"
                    android:layout_marginBottom="-34dp"
                    android:text="Category" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="116dp"
            android:layout_height="75dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="157dp"
            android:layout_marginLeft="157dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="141dp"
            android:layout_marginRight="141dp"
            android:contentDescription="@string/app_name"
            android:padding="10dp" />
    </RelativeLayout>

    <Button
        android:id="@+id/addbidButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="61dp"
        android:background="#FB94DAD3"
        android:text="Add a bid"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>